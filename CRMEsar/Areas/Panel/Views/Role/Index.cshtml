@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<Guid>>

@{
    ViewData["Title"] = "Lista de Roles";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"> Lista de roles</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn" style="background:#1B75BB ; color:white;border:none"><i class="fa fa-plus"></i>&nbsp; Agregar Rol</a>
        </div>
    </div>
    <br />
    <br />
    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Nombre </th>
                    <th> Normalizado </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var roles in Model)
                {
                    <tr>
                        <td>@roles.Name</td>
                        <td>@roles.NormalizedName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
