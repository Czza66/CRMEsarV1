@model IEnumerable<CRMEsar.Models.ViewModels.CrudEntidades.Modulos.ModulosTablaVM>

@{
    ViewData["Title"] = "Lista de Modulos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"> Lista de modulos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary" style="background:#1B75BB ; color:white;border:none"><i class="bi bi-plus-circle-fill"></i>&nbsp; Agregar modulo</a>
        </div>
    </div>
    <br />
    <br />
    @if (TempData["RespuestaOperacion"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["RespuestaOperacion"]
        </div>
    }
    <div class="table-responsive">
        <table id="TblContenido" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Icono </th>
                    <th> Nombre </th>
                    <th> Descripcion corta </th>
                    <th> Orden </th>
                    <th> Visible </th>
                    <th> Acciones </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var modulos in Model)
                {
                    <tr>
                        <td>@modulos.Icono</td>
                        <td>@modulos.Nombre</td>
                        <td>@modulos.DescripcionCorta</td>
                        <td>@modulos.orden</td>
                        <td>@(modulos.visible ? "Si" : "No")</td>
                        <td>
                            <a asp-route-id="@modulos.ModuloIdEncriptado" asp-action="Edit" class="btn btn-success text-white" style="background:#C63D96 ; color:white;border:none;cursor:pointer; width:140px;">
                                <i class="far fa-edit"></i> Editar
                            </a>
                            &nbsp;
                            <a onclick=Delete() class="btn btn-danger text-white" style="background:#EE3A4F ; color:white;border:none;cursor:pointer; width:140px;">
                                <i class="far fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/Maestros/dataTableGenerico.js"></script>
}