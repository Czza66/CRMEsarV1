@model CRMEsar.Models.ViewModels.CrudEntidades.InfoUser.infoUserVM
@{
    ViewData["Title"] = "Mis notificaciones";
}

<!-- Columna correo contraseña -->
<div class="card shadow-none" style="border:none">
    <div class="card-body">
        <hr />
        <div class="table-responsive">
            <table id="TblContenido" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th> Titulo </th>
                        <th> Mensaje </th>
                        <th> ¿Esta leida? </th>
                        <th> Fecha de creación </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var n in Model.notificaciones)
                    {
                        <tr>
                            <td>@n.titulo</td>
                            <td>@n.mensaje</td>
                            <td>@(n.estaleido ? "Si" : "No")</td>
                            <td>@n.fecha</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }