@model CRMEsar.Models.ViewModels.CrudEntidades.InfoUser.infoUserVM
@{
    ViewData["Title"] = "Mi Perfil";
}
<hr />
        <!-- Columna formulario de perfil -->
    <div class="card shadow-none" style="border:none">
        <div class="card-body">
        @if (TempData["InformacionPersonal"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["InformacionPersonal"]
            </div>
        }
        @if (TempData["CambioDeFoto"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["CambioDeFoto"]
            </div>
        }
        @if (TempData["ConfirmarCorreoEnviada"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["ConfirmarCorreoEnviada"]
            </div>
        }
        @if (TempData["MensajeExitoCambioContraseñaCorreo"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["MensajeExitoCambioContraseñaCorreo"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["Error"]
            </div>
        }
        <!-- Foto de perfil -->
        <div class="position-relative" style="width: 200px;">
            <img src="~/img/users/@(Model.usuario.fotoUser ?? "Men-Avatar.png")"
                 class="rounded-circle shadow"
                 style="height: 200px; width: 200px; background: rgba(255,255,255,0.8); padding: 8px; object-fit: cover;" />

            <form id="formImagen" asp-action="ActualizarImagenPerfil" method="post" enctype="multipart/form-data">
                <input type="file" name="imagen" id="imagenInput" accept="image/*" class="d-none" />
                <label for="imagenInput"
                       class="btn btn-sm position-absolute"
                       style="bottom: 10px; right: 10px; border-radius: 50px; background: #ffffff">
                    <i class="fas fa-edit"></i>
                </label>
            </form>
        </div>
            <hr />
            <!-- Formulario -->
        <form method="POST" asp-action="EditarInformacionPersonal">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Primer Nombre</label>
                    <input type="text" class="form-control" asp-for="usuario.Nombre1">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Segundo Nombre</label>
                    <input type="text" class="form-control" asp-for="usuario.Nombre2">
                    </div>
                </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Primer Apellido</label>
                    <input type="text" class="form-control" asp-for="usuario.Apellido1">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Segundo Apellido</label>
                    <input type="text" class="form-control" asp-for="usuario.Apellido2">
                </div>
            </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Numero de telefono</label>
                    <input type="number" class="form-control" asp-for="usuario.PhoneNumber">
                    </div>
                <div class="col-md-6">
                    <label class="form-label">Numero de documento</label>
                    <input type="number" class="form-control" asp-for="usuario.NumeroDocumento">
                </div>
                </div>
            <button type="submit" class="btn btn-primary w-100" style="background:#1B75BB ; color:white; border:none">Guardar Cambios</button>
        </form>
        </div>
    </div>

