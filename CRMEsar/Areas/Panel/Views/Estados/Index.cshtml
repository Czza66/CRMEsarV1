@model IEnumerable<CRMEsar.Models.ViewModels.CrudEntidades.Estados.EstadosTablaVM>

@{
    ViewData["Title"] = "Lista de Estados";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"> Lista de estados</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i>&nbsp; Agregar Estado</a>
        </div>
    </div>
    <br />
    <br />
    @if (TempData["RespuestaOperacion"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["RespuestaOperacion"]
        </div>
    }
    <div class="table-responsive">
        <table id="TblContenido" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Nombre </th>
                    <th> Descripcion </th>
                    <th> Entidad </th>
                    <th> Fecha de Creacion </th>
                    <th> Estado </th>
                    <th> Acciones </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var estados in Model)
                {
                    <tr>
                        <td>@estados.Nombre</td>
                        <td>@estados.Descripcion</td>
                        <td>@estados.EntidadNombre</td>
                        <td>@estados.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>@(estados.Activo ? "Activo" : "Inactivo")</td>
                        <td>
                            <a asp-route-id="@estados.EstadoIdEncriptado" asp-action="Edit" class="btn btn-success text-white" style="cursor:pointer; width:140px;">
                                <i class="far fa-edit"></i> Editar
                            </a>
                            &nbsp;
                            <a onclick=Delete() class="btn btn-danger text-white" style="cursor:pointer; width:140px;">
                                <i class="far fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/Maestros/dataTableGenerico.js"></script>
}
