@model IEnumerable<CRMEsar.Models.ViewModels.CrudEntidades.Integraciones.IntegracionesTablaVM>

@{
    ViewData["Title"] = "Lista de Integraciones";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"> Lista de integraciones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary" style="background:#1B75BB ; color:white;border:none"><i class="bi bi-plus-circle-fill"></i>&nbsp; Agregar integracion</a>
        </div>
    </div>
    <br />
    <br />
    @if (TempData["RespuestaOperacion"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["RespuestaOperacion"]
        </div>
    }
    <div class="table-responsive">
        <table id="TblContenido" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Tipo de Integracion </th>
                    <th> Nombre </th>
                    <th> Activa </th>
                    <th> Acciones </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var integracion in Model)
                {
                    <tr>
                        <td>@integracion.TipoIntegracion</td>
                        <td>@integracion.Nombre</td>
                        <td>@(integracion.Activa ? "Si" : "No")</td>
                        <td>
                            <a asp-route-id="@integracion.IntegracionIdEncriptado" asp-action="Edit" class="btn btn-success text-white" style="background:#C63D96 ; color:white;border:none;cursor:pointer; width:140px;">
                                <i class="far fa-edit"></i> Editar
                            </a>
                            &nbsp;
                            <a onclick=Delete() class="btn btn-danger text-white" style="background:#EE3A4F ; color:white;border:none;cursor:pointer; width:140px;">
                                <i class="far fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/Maestros/dataTableGenerico.js"></script>
}