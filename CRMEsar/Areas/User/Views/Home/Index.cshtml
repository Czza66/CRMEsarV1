@using CRMEsar.Models
@using CRMEsar.Models.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager
@model AccesoVM

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="d-flex flex-column flex-lg-row shadow-lg rounded overflow-hidden w-100 align-items-stretch" style="max-width: 1140px; background: rgba(255, 255, 255, 0.95);">

        <!-- Carrusel -->
        <div class="carrusel-login p-0 w-100 w-lg-66">
            <div id="carouselExampleCaptions" class="carousel slide h-100" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100">
                        <img src="~/img/login/Asus.jpg" class="d-block w-100 h-100 object-fit-cover" alt="Imagen 2">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Organización</h5>
                            <p>Esta imagen es de prueba</p>
                        </div>
                    </div>
                </div>

                <!-- Controles -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

            <!-- Login -->
            <div class="col-lg-5 p-4 bg-white d-flex flex-column justify-content-center">
                <div class="text-center mb-3">
                    <img src="~/img/login/LogoLogin.png" alt="Logo Fundación Orientame" style="max-height: 50px;" />
                </div>
                <p class="text-center text-muted">Bienvenido, ingresa tus credenciales</p>

                <form method="post" asp-controller="Home" asp-action="Acceso">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Usuario</label>
                        <input asp-for="Email" type="text" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" required autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="custom-check">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Autenticate &nbsp; <i class="bi bi-file-lock2-fill"></i></button>
                    </div>
                </form>

                <p class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Register" class="text-decoration-none text-muted">¿Olvidaste tu contraseña?</a>
                </p>
            </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}