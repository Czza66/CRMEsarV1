@using CRMEsar.Models.ViewModels
@model RegisterVM

@{
    ViewData["Title"] = "Registrarse Sesión";
}
<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Registro de usuario</h3>
        <form asp-controller="Home" asp-action="Registro" method="post" role="form">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">

                    <div class="mb-3">
                        <label asp-for="Nombre1" class="col-md-4"></label>
                        <input asp-for="Nombre1" class="form-control" />
                        <span asp-validation-for="Nombre1" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Nombre2" class="col-md-2"></label>
                        <input asp-for="Nombre2" class="form-control" />
                        <span asp-validation-for="Nombre2" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Apellido1" class="col-md-2"></label>
                        <input asp-for="Apellido1" class="form-control" />
                        <span asp-validation-for="Apellido1" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Apellido2" class="col-md-2"></label>
                        <input asp-for="Apellido2" class="form-control" />
                        <span asp-validation-for="Apellido2" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NumeroDocumento" class="col-md-2"></label>
                        <input asp-for="NumeroDocumento" class="form-control" />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ComfirmPassword" class="col-md-4"></label>
                        <input asp-for="ComfirmPassword" class="form-control" />
                        <span asp-validation-for="ComfirmPassword" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class=" col-sm-10 offset-2">
                    <button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}