@using CRMEsar.Models.ViewModels;
@using CRMEsar.Models.ViewModels.Login
@model AutenticacionDosFactoresVM

@{
	ViewData["Title"] = "Activar Autenticador";
}

<p>Por favor ingrese  el codigo de abajo en su APP Autenticador:@Model.Token</p>
<p>Tambien puedes escanear el QR:</p>
<div id="codigoQR">

</div>

<form method="post">
	<input type="hidden" asp-for="Token" />
	<hr />
	<div class="row">
		<div class="col-sm-7">
			<div col-md-12>
				<label asp-for="code"></label>
				<input type="text" asp-for="code" class="form-control" placeholder="Escribe aca el codigo de tu autenticador" />
				<span asp-validation-for="code" class="text-danger"></span>
			</div>
		</div>
		<div class="col-sm-5">
			<div class="col-sm-5">
				<div class="col-md-12 pt-4">
					<button type="submit" class="btn btn-primary mt-3">Enviar</button>
				</div>
			</div>
		</div>
	</div>
	</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script src="~/js/qrcode.js"></script>
	<script type="text/javascript">
		new QRCode(document.getElementById("codigoQR"),"@Model.urlCodigoQR");
	</script>
	
}
